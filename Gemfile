source 'https://rubygems.org'

gem 'rails', '4.2.1'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Twitter bootstrap with sass
gem 'bootstrap-sass'
# Cool free vector icons as font
gem 'font-awesome-rails'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Easy scss rules
gem 'bourbon'

# Js
# Angular always updated to latest stable: version number is equal of angular version number
gem 'angularjs-rails', '~> 1.3.15'
# For using rails templates with AngularJS
gem 'angular-rails-templates'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# Use jquery as the JavaScript library
gem 'jquery-rails'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc
# Databse connector
gem 'pg'
# Enumerize
gem 'enumerize'
# Use puma as app server
gem 'puma'

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug'
  # Offers a better rails console
  gem 'pry-rails'
  gem 'pry-doc'
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'
  # Rspec
  gem 'rspec-rails'
  gem 'guard-rspec'
  # Js
  gem 'protractor-rails', '~> 0.0.14'
  gem 'jasmine-rails'
  gem 'guard-jasmine-rails'
  # Factory girl for seeds and test
  gem "factory_girl_rails", "~> 4.0"
end

group :development do
end

group :test do
  # For Rspec
  gem 'database_cleaner'
  gem 'shoulda-matchers'
  gem 'faker'
end

group :production do
end
